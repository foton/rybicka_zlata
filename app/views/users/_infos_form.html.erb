
 <h4><%= t("user.profile.my.infos_for_donors") %></h4>
  <% %i[body_height
        body_weight
        tshirt_size
        trousers_waist_size
        trousers_leg_size
        shoes_size].each do |att| %>
    <div class="field mdl-textfield mdl-js-textfield mdl-textfield--floating-label mdl-cell mdl-cell--9-col-desktop mdl-cell--6-col-tablet mdl-cell--4-col-phone">
      <%= f.label att, class: "mdl-textfield__label" %>
      <%= f.text_field att, class: "mdl-textfield__input", required: false %>
    </div>
    <br />
  <% end %>

  <% %i[other_sizes_and_dimensions likes dislikes].each do |att| %>
    <div class="field mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
      <%= f.label att, class: "mdl-textfield__label" %>
      <%= f.text_area att, class: "mdl-textfield__input", rows: 5, required: false %>
    </div>
    <br />
  <% end %>


