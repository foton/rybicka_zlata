<h3><%= t("wishes.from_donee.views.index.header") %></h3>

<div id="wishes">
  <%= tag_to_object_action(:button, :new, @user, Wish::FromAuthor.new, false, {}) %>

	<div id="donee_wishes_list" class="wishes-list">
    <%= render( partial: "/shared/list_with_actions", locals: { collection: @wishes, none_text: t("wishes.from_donee.views.index.no_wishes"), remote: true} ) %>
	</div>

  <div>
    <%= link_to(t("wishes.from_donee.views.index.header_fulfilled"), user_my_wishes_path(@user, fulfilled: 1)) %>
  </div>
</div>

