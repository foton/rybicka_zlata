<div id="donor_wish_show">
  <h3 id="title"><%= @wish.title %></h3>
  <p id="description"><%=raw to_html(@wish.description) %></p>
  <div id="donees">
    <h4><%= I18n.t("wishes.from_donor.views.show.donees_list_header") %></h4>
    <ul id="donees_list">
     <% for donee_name in @wish.donee_names_for(@user) %>
        <li><%= donee_name %></li>
     <% end %>
    </ul>
  </div>

  <div class="actions">
    <span class="as_list">
      <ul>
      <% for action in (@wish.available_actions_for(@user)-[:show]) %>
        <li><%= tag_to_object_action(:button, action, @user, @wish, false, {state_action: action}) %></li>
      <% end %>
      </ul>
    </span>
  </div>

  <div id="discussion">
    <a href="#"><%= t("discussion.start_discussion")%></a>
  </div>

</div>
